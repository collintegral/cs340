<% if (title) { %>
    <h1><%= title %></h1>
<% } else { 
    res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }); %>
        </ul>
<% } %>

<section class="user-form-box">
    <form id='updateForm' class="user-form" action="/inv/manage/delete-inventory" method="post">
        <label>
            Item Make:
            <br><input type="text" class="input-text" name="inv_make" required value="<%= locals.inv_make %> " readonly>
            <div class="pw-reqs"></div>
        </label><br>
        <label>
            Item Model:
            <br><input type="text" class="input-text" name="inv_model" required value="<%= locals.inv_model %>" readonly>
            <div class="pw-reqs"></div>
        </label><br>
        <label>
            Item Year:
            <br><input type="text" class="input-text" name="inv_year" pattern="\d\d\d\d" required value="<%= locals.inv_year %>" readonly>
        </label><br>
        <label>
            Item Price:
            <br><input type="text" class="input-text" name="inv_price" pattern="[1-9][\d]*(\.[\d]{2})?|0|\.[\d][\d]" required value="<%= locals.inv_price %>" readonly>
            <div class="pw-reqs"></div>
        </label><br>
        <section class="submit-cont">
            <input type="submit" class="submit-btn button" Value="Delete">
            <div class="pw-reqs">Confirm deletion - This action is permanent!</div>
            <input type="hidden" name="inv_id"
            <% if(locals.inv_id) { %> value=" <%= locals.inv_id %>"
            <% } %>>
        </section>
    </form>
</section>